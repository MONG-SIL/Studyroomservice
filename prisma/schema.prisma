// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id Int @id @default(autoincrement()) // 고유 id
    studentId Int @unique // 학번중복 x
    name String  // 학생 이름
    major String // 학생 과
    campus String // 캠퍼스 일단은 글캠?
    isValid Boolean @default(false)  // 학교 DB와 비교해서 맞는 사용자인지 판별
    activateTime String @default("") // 
    teminatedTime String @default("")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Reservation {
    id Int @id @default(autoincrement()) // 고유 id
    userId Int // 예약한 학생 id
    date String 
    start String // 예약시작 시간
    finish String
    space String // 방 번호?? 위치
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Studyroom {
    id Int @id
    isReservation Boolean @default(false) // 예약이 되어 있는지 확인 , reservation의 시간에 따라서 변경
    roomNumber String 
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}